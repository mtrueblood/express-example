 <!-- the default component we create and where you can add new components on the fly is called "root" by default - this also will be rendered first after the layout: index.js line 32 (http://a.storyblok.com/f/40206/x/8e9c92a64b/unbenannt.png)-->
 {{{ story.content._editable }}}
<div class="root">
  {{#if story.content.mainnav_displayed }}
    <header class="meganav">
      <div class="meganav-strip">
        <a class="navicon-button toggle-meganav-overlay">
          <div class="navicon"></div>
        </a>
        <p class="page-title {{ story.content.header_strip_theme }}">
          {{#ifEquals story.content.page_name "home" }}
            menu
          {{else}}
            {{ story.content.page_name }} <span>({{ story.content.subtext }})</span>
          {{/ifEquals}}
        </p>
      </div>
      <div class="meganav-overlay">
        <div class="outer-close toggle-meganav-overlay">
          <a class="close"><span></span></a>
        </div>
        <h5 class="page-title light">
          {{#ifEquals story.content.page_name "home" }}
            menu
          {{else}}
            {{ story.content.page_name }} <span>({{ story.content.subtext }})</span>
          {{/ifEquals}}
        </h5>
        <nav>
          {{#each global.navigation_links}}
            <div>{{> (lookup . 'component') }}</div>
          {{/each}}
        </nav>
      </div>
    </header>
  {{/if}}

  <div class="page">
    {{#each story.content.body}}
      {{> (lookup . 'component') }}
    {{/each}}
  </div>

  <div class="megafooter container full-width">
    <div class="top text-center">
      <div class="inner">
        <img src="{{ global.logo }}" alt="Yes&" />
      </div>
    </div>
    <div class="bottom">
      <p>&copy; <span></span> {{ global.copyright }}</p>
      <div class="navigation-links">
        {{#each global.navigation_links}}
          {{> (lookup . 'component') }}
        {{/each}}
      </div>
      {{#if global.social_links}}
        <div class="social-links">
          {{#each global.social_links}}
            {{> (lookup . 'component') }}
          {{/each}}
        </div>
      {{/if}}
    </div>
  </div>

</div>  
